.top{
	width: 92%;
	margin: 4%;
}
.topLeft{
	width: 60rpx;
	height:56rpx;
	overflow: hidden;
}
.topLeft image{
	width: 100%;
	height: 100%;
}
.topRight{
	width: 82%;
	height:60rpx;
	position: relative;
	z-index: 10;
	box-shadow: 0rpx 2rpx 10rpx #D1D1D1;
}

.topRight image{
	margin-left: 20rpx;
	margin-bottom: 6rpx;
}
.topRight input{
	width: 56%;
	margin-left: 30rpx;
	position: relative; 
	top: 2rpx;
}
.search-box{
	border-radius: 0rpx 20rpx 20rpx 0rpx;
	height: 60rpx;
	width: 25%;
	text-align: center;
	position: absolute;
	bottom: 0rpx;
	right: 0rpx;
}

.bigbox{
	width: 92%;
	margin: 4%;
	padding-bottom: 30rpx;
	box-shadow: 0rpx 0rpx 20rpx #DBDBDB;
	border-radius: 20rpx;
}
.box{
	width: 32%;
	height: 200rpx;
	overflow: hidden;
	border-radius: 12rpx;
	margin: 20rpx 0rpx 0rpx;
	margin-left: 30rpx;
	position: relative;
	top: -20rpx;
}
.box img{
	width: 100%;
	height: 100%;
}
.name{
	/* border: solid 1rpx red; */
	height: 66rpx;
}
.list-item{
	border: solid 1rpx #F5F5F5;
	width:60rpx; 
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	font-size: 26rpx;
}
.box-btm{
	width: 130rpx;
	height: 50rpx;
	border: solid 1rpx #D5D5D5;
	text-align: center;
	line-height: 50rpx;
	border-radius: 10rpx;
}
.boxBtmGreen{
	border: solid 1rpx #1AA034;
	color: #1AA034;
}



