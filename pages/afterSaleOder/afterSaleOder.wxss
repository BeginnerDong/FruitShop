
.bigbox{
	width: 92%;
	margin: 4%;
	box-shadow: 0rpx 0rpx 20rpx #E0E0E0;
	border-radius: 20rpx;
	box-sizing: border-box;
	padding: 20rpx 4%;
}

.box{
	width: 32%;
	height: 200rpx;
	overflow: hidden;
	border-radius: 12rpx;
	position: relative;
}
.box image{
	width: 100%;
	height: 100%;
}
.name{
	height: 66rpx;
}
.box-right{
	width: 62%;
}


