<view class="video-box" wx:if="{{is_show}}">
	<view class="video">
		<image src="../../image/img0%20(2).jpg" style="width: 100%;height: 100%;"></image>
		<view class="radiu40 font12 jupbox" bindtap="show">跳过</view>
	</view>
</view>
<view class="box bg1">
	<view class="box-top">
		<swiper indicator-dots="{{false}}" circular="circular" autoplay="{{false}}" previous-margin="{{'80rpx'}}" next-margin="{{'80rpx'}}" bindchange="swiperChange">
		  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
		    <swiper-item>
				<image src="{{item}}" class="slide-image {{swiperIndex == index? 'active' : ''}}" />
		    </swiper-item>
		  </block>
		</swiper>
	</view>
</view>
